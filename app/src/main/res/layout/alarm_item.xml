<?xml version="1.0" encoding="utf-8"?>

<soup.neumorphism.NeumorphCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="5dp"
    app:neumorph_backgroundColor="@color/bg_color"
    app:neumorph_shadowColorDark="@color/shadow_dark_color"
    app:neumorph_shadowColorLight="@color/shadow_light_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alarmTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:text="Alarm"
                android:textColor="@color/switch_off_color"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/alarmTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/bitsumis_font"
                android:text="07:30"
                android:textColor="@color/theme_color"
                android:textSize="40sp" />
        </LinearLayout>

        <soup.neumorphism.NeumorphCardView
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginVertical="15dp"
            app:neumorph_shadowColorDark="@color/shadow_dark_color"
            app:neumorph_shadowColorLight="@color/shadow_light_color"
            app:neumorph_shapeType="pressed" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/alarmSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="25dp"
            android:checked="false"
            android:thumb="@drawable/thumb"
            app:thumbTint="@drawable/thumb_color"
            app:trackTint="@color/transparent_color" />

        <TextView
            android:id="@+id/alarmDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="65dp"
            android:layout_marginRight="117dp"
            android:fontFamily="@font/bitsumis_font"
            android:text="Mon, 14 Dec"
            android:textColor="@color/theme_color_secondary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/weekDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="65dp"
            android:layout_marginRight="117dp"
            android:fontFamily="@font/bitsumis_font"
            android:text="M T W T F S S"
            android:textColor="#4700C6"
            android:textSize="15sp"
            android:visibility="gone" />

    </RelativeLayout>

</soup.neumorphism.NeumorphCardView>
